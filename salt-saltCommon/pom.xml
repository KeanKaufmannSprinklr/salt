  <dependencies>
    
    <dependency>
      <groupId>de.hu_berlin.german.korpling.saltnpepper</groupId>
      <artifactId>salt-graph</artifactId>
      <version>${project.version}</version>
      <type>bundle</type>
    </dependency>
    <dependency>
      <groupId>de.hu_berlin.german.korpling.saltnpepper</groupId>
      <artifactId>salt-saltCore</artifactId>
      <version>${project.version}</version>
      <type>bundle</type>
    </dependency>
  </dependencies>
  <build>
    <plugins>
    <!-- start: Plugin for automatic releasing -->
    <plugin>
       <artifactId>maven-release-plugin</artifactId>
       <version>2.1</version>
       <configuration>
         <tagBase>
           https://korpling.german.hu-berlin.de/svn/saltnpepper/Salt/SaltCommon/tags
         </tagBase>
         <releaseProfiles>release</releaseProfiles>
     		<goals>deploy assembly:single</goals>
       </configuration>
     </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.1.0</version>
        <extensions>true</extensions>
        <executions>
          <execution>
            <phase>process-classes</phase>
            <goals>
              <goal>manifest</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <manifestLocation>${basedir}/META-INF</manifestLocation>
          <source>1.6</source>
          <target>1.6</target>
          <instructions>
            <Bundle-Name>${project.artifactId}</Bundle-Name>
            <Bundle-SymbolicName>${project.groupId}.${project.artifactId};singleton:=true</Bundle-SymbolicName>
            <Bundle-Version>${project.version}</Bundle-Version>
            <Bundle-RequiredExecutionEnvironment>JavaSE-1.6</Bundle-RequiredExecutionEnvironment>
            <Export-Package>de.hu_berlin.german.korpling.saltnpepper.salt; de.hu_berlin.german.korpling.saltnpepper.salt.saltCommon; de.hu_berlin.german.korpling.saltnpepper.salt.saltCommon.exceptions; de.hu_berlin.german.korpling.saltnpepper.salt.saltCommon.modules; de.hu_berlin.german.korpling.saltnpepper.salt.saltCommon.sCorpusStructure; de.hu_berlin.german.korpling.saltnpepper.salt.saltCommon.sDocumentStructure; de.hu_berlin.german.korpling.saltnpepper.salt.saltSemantics; de.hu_berlin.german.korpling.saltnpepper.salt.saltSemantics.modules; de.hu_berlin.german.korpling.saltnpepper.salt.saltCommon.resources; de.hu_berlin.german.korpling.saltnpepper.salt.saltCommon.resources.dot</Export-Package>
            <Include-Resource>{maven-resources}, LICENSE, NOTICE</Include-Resource>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
    <finalName>${project.groupId}.${project.artifactId}_${project.version}</finalName>
  </build>
  <name>${project.groupId}.${project.artifactId}</name>
